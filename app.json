{
	"name": "filesaver",
	"description": "file saver bot",
	"repository": "https://github.com/Amalrajanj/filesaver",
    "logo": "https://node-js-sample.herokuapp.com/node.png",
	"keywords": ["telegram","filesaver","bot","nodejs"],
	"env": {
		"TOKEN": {
			"description": "bot token provided by @botfather",
            "value":"token"
		},
        "DOMAIN":{
            "description": "enter your app name",
            "value":"domain"
		},
        "DB_URL":{
            "description": "get mongodb database url from https://www.mongodb.com/cloud/atlas with database name = mediaFile and collection name = fileBackup",
            "value":"db"
        },
        "ADMIN":{
            "description": "enter your id",
            "value":"admin_id"
        },
        "BOTUSERNAME":{
            "description":"Enter your bot username without @",
            "value":"botusername"
        }
        
        	
	},
	"buildpacks": [
		{
			"url": "heroku/nodejs"
		}
	]
}